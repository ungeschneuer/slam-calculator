{
  "name": "poetry-slam-calculator",
  "version": "1.3.1",
  "description": "Professioneller Punktesummen-Rechner für Poetry Slam Wettbewerbe mit PWA-Funktionalität",
  "main": "index.html",

  "scripts": {
    "dev": "vite",
    "dev:cache-bust": "vite && node scripts/cache-bust.js --dev",
    "build": "vite build",
    "build:cache-bust": "vite build && node scripts/cache-bust.js",
    "preview": "vite preview",
    "preview:cache-bust": "vite preview && node scripts/cache-bust.js --preview",
    "preview:fresh": "npm run clean && npm run build:cache-bust && vite preview",
    "build:pages": "NODE_ENV=production vite build",
    "build:pages:cache-bust": "NODE_ENV=production vite build && node scripts/cache-bust.js",
    "clean": "rm -rf dist",
    "deploy": "npm run build:pages:cache-bust && echo 'Build completed with cache busting. Push to main branch to deploy.'",
    "cache-bust": "node scripts/cache-bust.js"
  },
  "keywords": [
    "poetry-slam",
    "calculator",
    "pwa",
    "offline",
    "timer",
    "scoring",
    "progressive-web-app",
    "responsive",
    "dark-mode",
    "typescript-ready"
  ],
  "author": {
    "name": "Marcel Schneuer",
    "url": "https://github.com/ungeschneuer"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungeschneuer/slam-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/ungeschneuer/slam-calculator/issues"
  },
  "homepage": "https://ungeschneuer.github.io/slam-calculator/",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vite-plugin-compression": "^0.5.1"
  }
}
